<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="arcons.com.ar.prettymusic.activities.EditSongActivity">

    <TextView android:text="@string/song_title"
        android:id="@+id/song_title_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="?android:attr/listSeparatorTextViewStyle" />

    <EditText
        android:id="@+id/song_title_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/song_title_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView android:text="@string/song_artist"
        android:id="@+id/song_artist_text"
        android:layout_below="@+id/song_title_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        style="?android:attr/listSeparatorTextViewStyle" />

    <AutoCompleteTextView
        android:id="@+id/song_artist_input"
        android:layout_below="@+id/song_artist_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView android:text="@string/song_album"
        android:id="@+id/song_album_text"
        android:layout_below="@+id/song_artist_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        style="?android:attr/listSeparatorTextViewStyle" />

    <AutoCompleteTextView
        android:id="@+id/song_album_input"
        android:layout_below="@+id/song_album_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button"
        android:layout_below="@+id/song_album_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_changes"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="saveSong" />

</RelativeLayout>
